server {
    listen 80;
    server_name {{ server_name }};

    root {{ app_dir }}/build;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /health {
        access_log off;
        return 200 'healthy\n';
        add_header Content-Type text/plain;
    }
}